
public class Testing {

	public static void main(String[] args) {
		GTerm gt = new GTerm(700, 600);
		gt.setXY(1, 1);
		gt.setFontSize(16);
		gt.setFontColor(16, 50, 64);
		gt.setBackgroundColor(168, 84, 50);
		String gender1 = null;
		gt.print("Hello adventurer i see you wish to become a Knight \nFirst i must ask you a few questions");
		String name = gt.getInputString("Please enter name");
		String gender = gt.getInputString(
				"What is your gender \nPlease answer with one of the following:\n 1. Male\n 2.Female \n 3.Other");
		while (gender != "1" && gender != "2" && gender != "3") {
			gender = gt.getInputString(
					"Sorry that was invalid\nWhat is your gender \nPlease answer with one of the following:\n 1. Male\n 2.Female \n 3.Other");
		}
		if (gender == "1") {
			gender1 = ("Sir ");
		} else if (gender == "2") {
			gender1 = ("Maddam ");
		} else if (gender == "3") {
			gender1 = ("");
		}
		gt.clear();
		gt.println("Welcome " + gender1 + name + " to the world of Mutingard");
		gt.println("");
		gt.println("");
		gt.setFontSize(14);
		gt.setFontColor(0, 0, 0);
		gt.println("");
		gt.println("");

		gt.setXY(10, 500);
		gt.showHelp();

	}

}
